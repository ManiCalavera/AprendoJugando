        <LinearLayout
            android:id="@+id/lvl6_linear8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/troqueladoconverde"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lvl6_linear7" />

        <LinearLayout
            android:id="@+id/lvl6_debug4"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="#CF4AB8"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lvl6_linear8" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/lvl6_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@id/lvl6_constraint0"
        app:layout_constraintEnd_toStartOf="@+id/lvl6_txt3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lvl6_btn_help"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#3FDA08"
        android:text="LETRA" />

    <TextView
        android:id="@+id/lvl6_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3FDA08"
        android:textSize="49sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toTopOf="@id/lvl6_constraint0"
        app:layout_constraintEnd_toStartOf="@+id/lvl6_txt4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lvl6_txt2"
        app:layout_constraintTop_toTopOf="parent"

        android:text="A -" />

    <TextView
        android:id="@+id/lvl6_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@id/lvl6_constraint0"
        app:layout_constraintEnd_toStartOf="@+id/lvl6_txt5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lvl6_txt3"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#3FDA08"
        android:text="LETRA" />

    <TextView
        android:id="@+id/lvl6_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3FDA08"
        android:textSize="49sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toTopOf="@id/lvl6_constraint0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
