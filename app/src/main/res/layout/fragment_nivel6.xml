        android:textStyle="bold"
        app:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toTopOf="@id/lvl6_constraint1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="@id/lvl6_constraint1"
        app:layout_constraintLeft_toLeftOf="@id/lvl6_constraint1"
        />


    <ImageButton
        android:id="@+id/lvl6_btn_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ayuda"
        app:layout_constraintBottom_toTopOf="@id/lvl6_constraint0"
        app:layout_constraintDimensionRatio="2:2"
        app:layout_constraintEnd_toStartOf="@+id/lvl6_txt2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/lvl6_guideline8"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/lvl6_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/lvl6_guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
