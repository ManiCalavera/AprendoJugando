        <LinearLayout
            android:id="@+id/lvl6_linear4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/troqueladoconverde"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lvl6_linear3" />

        <LinearLayout
            android:id="@+id/lvl6_debug2"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lvl6_linear4" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lvl6_constraint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:layout_constraintRight_toLeftOf="@id/lvl6_constraint1"
        app:layout_constraintTop_toTopOf="parent"

        >

        <LinearLayout
            android:id="@+id/lvl6_debug3"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="#B64343"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/lvl6_linear5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/troqueladoconverde"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lvl6_debug3" />


        <LinearLayout
            android:id="@+id/lvl6_linear6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/troqueladoconverde"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lvl6_linear5" />

        <LinearLayout
            android:id="@+id/lvl6_linear7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/troqueladoconverde"
