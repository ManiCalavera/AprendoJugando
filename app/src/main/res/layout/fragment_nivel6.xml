<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"
        android:text="boton"
        />

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_marginRight="@dimen/_100sdp"
       >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/olla"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentLeft="true"

            android:id="@+id/tv1"

            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/olla"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/tv1"

            android:id="@+id/tv2"
         />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/olla"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/tv2"

            android:id="@+id/tv3"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/olla"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@id/tv3"

            android:id="@+id/tv4"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/olla"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/tv1"
            android:id="@+id/tv5"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/olla"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/tv2"
            android:layout_toRightOf="@id/tv5"
            android:id="@+id/tv6"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/olla"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/tv4"
            android:layout_toRightOf="@id/tv6"
            android:id="@+id/tv7"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/olla"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/tv4"
            android:layout_toRightOf="@id/tv7"
            android:id="@+id/tv8"
            />



    </RelativeLayout>


    <RelativeLayout

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"

        >

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:background="#B64343"
            android:id="@+id/linear1"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"
            android:orientation="horizontal" />


        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/linear1"
            android:background="#CF4AB8"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_toRightOf="@id/linear2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/linear3"
            android:background="#A3799C"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_toRightOf="@id/linear3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/linear4"
            android:orientation="horizontal"
            android:background="#ED2F36AD"
            />

        <LinearLayout
            android:layout_toRightOf="@id/linear4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/linear5"
            android:orientation="horizontal"
            android:background="#ED6AAD2F"
            />
        <LinearLayout
            android:layout_toRightOf="@id/linear5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/linear6"
            android:orientation="horizontal"
            android:background="#2196F3"
            />
        <LinearLayout
            android:layout_toRightOf="@id/linear6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/linear7"
            android:orientation="horizontal"
            android:background="#F321B8"
            />
        <LinearLayout
            android:layout_toRightOf="@id/linear7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/linear8"
            android:orientation="horizontal"
            android:background="#014C55"
            />
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/linear8"
            android:id="@+id/linear9"
            android:background="#CDDC39"

            />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/linear9"
            android:id="@+id/linear10"
            android:visibility="invisible"

            />









    </RelativeLayout>



</android.support.constraint.ConstraintLayout>


