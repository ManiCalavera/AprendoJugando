            android:id="@+id/tv8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/aro"
            app:layout_constraintLeft_toRightOf="@id/lvl6_guideline2"
            app:layout_constraintRight_toLeftOf="@id/lvl6_guideline3"
            app:layout_constraintTop_toBottomOf="@id/lvl6_guideline5" />

        <android.support.constraint.Guideline
            android:id="@+id/lvl6_guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />


        <android.support.constraint.Guideline
            android:id="@+id/lvl6_guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.70" />

        <android.support.constraint.Guideline
            android:id="@+id/lvl6_guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <android.support.constraint.Guideline
            android:id="@+id/lvl6_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
