        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/lvl6_constraint2"
        app:layout_constraintLeft_toLeftOf="@id/lvl6_constraint2"
        app:layout_constraintRight_toRightOf="@id/lvl6_constraint2"
