<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/lvl6_constraint0"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="@dimen/_65sdp"
        android:layout_marginRight="@dimen/_100sdp"
        android:background="#3FDA08"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/lvl6_btn_check"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/check"
            app:layout_constraintDimensionRatio="2:2"
            app:layout_constraintLeft_toRightOf="@id/lvl6_guideline1"
            app:layout_constraintRight_toLeftOf="@id/lvl6_guideline2"
            app:layout_constraintTop_toBottomOf="@id/lvl6_guideline6"

            />

        <ImageButton
            android:id="@+id/lvl6_btn_home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/casa"
            app:layout_constraintDimensionRatio="2:2"
            app:layout_constraintLeft_toRightOf="@id/lvl6_guideline0"
            app:layout_constraintRight_toLeftOf="@id/lvl6_guideline1"
            app:layout_constraintTop_toBottomOf="@id/lvl6_guideline6"

            />

        <ImageView
            android:id="@+id/tv1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ala"
            app:layout_constraintLeft_toRightOf="@id/lvl6_guideline-1"
            app:layout_constraintRight_toLeftOf="@id/lvl6_guideline0"
            app:layout_constraintTop_toBottomOf="@id/lvl6_guideline4" />

        <ImageView
            android:id="@+id/tv2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/oreja"
            app:layout_constraintLeft_toRightOf="@id/lvl6_guideline0"
            app:layout_constraintRight_toLeftOf="@id/lvl6_guideline1"
            app:layout_constraintTop_toBottomOf="@id/lvl6_guideline4" />

        <ImageView
            android:id="@+id/tv3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ojo"
            app:layout_constraintLeft_toRightOf="@id/lvl6_guideline1"
            app:layout_constraintRight_toLeftOf="@id/lvl6_guideline2"
            app:layout_constraintTop_toBottomOf="@id/lvl6_guideline4" />

        <ImageView
            android:id="@+id/tv4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/anillo"
            app:layout_constraintLeft_toRightOf="@id/lvl6_guideline2"
            app:layout_constraintRight_toLeftOf="@id/lvl6_guideline3"
            app:layout_constraintTop_toBottomOf="@id/lvl6_guideline4" />

        <ImageView
            android:id="@+id/tv5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/oveja"
            app:layout_constraintLeft_toRightOf="@id/lvl6_guideline-1"
            app:layout_constraintRight_toLeftOf="@id/lvl6_guideline0"
            app:layout_constraintTop_toBottomOf="@id/lvl6_guideline5" />

        <ImageView
            android:id="@+id/tv6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/arania"
