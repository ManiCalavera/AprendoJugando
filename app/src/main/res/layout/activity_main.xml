<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/niveles"
        android:layout_width="378dp"
        android:layout_height="79dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/boton1" />


    <ImageButton
        android:id="@+id/letras"
        android:layout_width="378dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:onClick="Letras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/niveles"
        app:srcCompat="@mipmap/boton2" />

    <ImageButton
        android:id="@+id/acercade"
        android:layout_width="378dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:onClick="Acercade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/letras"
        app:srcCompat="@mipmap/boton3" />

</android.support.constraint.ConstraintLayout>